{
	"manifest_version": 2,
 	"name": "Auto Refresh & Switch Tabs [By Mazel]",
 	"description": "Every 20 secondes : Switch to next tab & refresh next (+1) tab",
 	"version": "1.0",
 	"permissions": [
 		"http://*/*",
 		"https://*/*",
 		"tabs"
 	],
 	"browser_action": {
  		"default_icon" : "img/icon.png",
  		"default_popup": "popup.html"
	},
 	"icons": { 
  		"128" : "img/icon_128.png"
	},
	"background": {
		"scripts": ["js/app.js"]
	}
}